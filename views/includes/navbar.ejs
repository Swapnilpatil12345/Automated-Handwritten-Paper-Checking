<nav class="navbar sticky-top navbar-expand-md" style="background-color: #ffffff; box-shadow: 0 2px 6px rgba(0,0,0,0.1);">
  <div class="container-fluid">
    <a class="navbar-brand" href="/" style="font-size: 1.8rem; font-weight: bold; color: #333;">
      <i class="fa-solid fa-file-circle-check"></i>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarElegant" aria-controls="navbarElegant" aria-expanded="false" aria-label="Toggle navigation" style="border: none;">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarElegant">
      <ul class="navbar-nav me-auto mb-2 mb-md-0">
        <li class="nav-item">
          <a class="nav-link elegant-link" href="/">All Papers</a>
        </li>
        <% if (typeof currUser !== "undefined" && currUser) { %>
          <li class="nav-item">
            <a class="nav-link elegant-link" href="/papers/summary">Summary</a>
          </li>
        <% } %>
        <li class="nav-item">
          <a class="nav-link elegant-link" href="/papers/new">Add New Papers</a>
        </li>
      </ul>
      <ul class="navbar-nav ms-auto mb-2 mb-md-0">
        <% if (!currUser) { %>
          <li class="nav-item">
            <a class="nav-link elegant-link" href="/signup">Signup</a>
          </li>
          <li class="nav-item">
            <a class="nav-link elegant-link" href="/login">Login</a>
