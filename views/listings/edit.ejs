<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Edit paper</h3>
    <form action="/papers/<%=listing._id%>?_method=PUT" method="POST">
        <div class="mb-3">
            <label for="Name" class="form-lable">Student's Name</label>
            <input type="text" name="listing[Name]" class="form-control" value="<%=listing.Name%>">
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-6">
                <label for="Roll_Number" class="form-lable">Student's Roll Number</label>
                <input type="text" name="listing[Roll_Number]" class="form-control"  value="<%=listing.Roll_Number%>">
            </div>
            
            <div class="mb-3 col-md-6">
                <label for="PRN_Number" class="form-lable">Student's PRN Number</label>
                <input type="text" name="listing[PRN_Number]" class="form-control" value="<%=listing.PRN_Number%>">
            </div>
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="Subject" class="form-lable">Exam's Subject</label>
                <input type="text" name="listing[Subject]" class="form-control" value="<%=listing.Subject%>">
            </div>
            
            <div class="mb-3 col-md-4">
                <label for="MaxMarks" class="form-lable">Max Mark of Exam</label>
                <input type="number" name="listing[MaxMarks]" class="form-control" value="<%=listing.MaxMarks%>">
            </div>

            <div class="mb-3 col-md-4">
                <label for="MarksObtained" class="form-lable">Marks Obtained in Exam</label>
                <input type="number" name="listing[MarksObtained]" class="form-control" value="<%=listing.MarksObtained%>">
            </div>
        </div>
        
        <div class="mb-3">
            <label for="StudentAnswerSheet" class="form-lable">Text Extract of previously uploded paper</label>
            <textarea name="listing[StudentAnswerSheet]" class="form-control" style="height: 24vh;" disabled><%=listing.StudentAnswerSheet.context%></textarea>
        </div>
        
        
        <div class="mb-3">
            <label for="Description" class="form-lable">Description about question paper</label>
            <textarea name="listing[Description]" class="form-control" value="<%=listing.Description%>"></textarea>
        </div>




        <button type="submit" class="btn btn-dark edit-btn mt-3">Add</button>
        <br><br>

    </form>
</div>
</div>


