<% layout('/layouts/boilerplate') %>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">Sign Up</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="post">
                
                <div class="mb-3">
                    <label for="Name" class="form-lable">Username</label>
                    <input type="text" name="user[username]" id="username" class="form-control" placeholder="Username" required>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-lable">Email</label>
                    <input type="email" name="user[email]" id="email" class="form-control" placeholder="Email" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-lable">Password</label>
                    <input type="password" name="user[password]" id="password" class="form-control" placeholder="Password" required>
                </div>
                <button class="btn btn-success">Sign-Up</button>
            </form>
        </div>
    </div>